</section><script>
  function filterSongs(genre) {
    const songs = document.querySelectorAll('.song');
    songs.forEach(song => {
      if (genre === 'all' || song.classList.contains(genre)) {
        song.style.display = 'block';
      } else {
        song.style.display = 'none';
      }
    });
  }
</script>
